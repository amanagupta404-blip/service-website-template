---
import BaseLayout from '@layouts/BaseLayout.astro';
import TestCounter from '@components/TestCounter.svelte';
import ColorPalette from '@components/ui/ColorPalette.svelte';
import TypographyShowcase from '@components/ui/TypographyShowcase.svelte';
import ResponsiveDemo from '@components/ui/ResponsiveDemo.svelte';
import ContainerDemo from '@components/ui/ContainerDemo.svelte';
---

<BaseLayout
  title="Design System Showcase"
  description="Service website template design system with multi-theme support"
>
  <main id="main-content" class="max-w-6xl mx-auto p-8">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-5xl font-bold text-dark mb-4">Service Website Template</h1>
        <p class="text-xl text-dark mb-2">Design System Showcase</p>
        <p class="text-base text-dark opacity-70">
          Astro 5.15.3 + Svelte 5.43.2 + UnoCSS - Phase 2 Implementation
        </p>
      </header>

      <!-- Technology Stack Status -->
      <section class="mb-12 p-6 bg-mint-cream rounded-lg">
        <h2 class="text-3xl font-semibold text-primary mb-4">‚úÖ Tech Stack Status</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="p-4 bg-white rounded">
            <h3 class="font-bold text-dark mb-2">Astro 5.15.3</h3>
            <p class="text-sm text-dark">Meta-framework with partial hydration ‚úì</p>
          </div>
          <div class="p-4 bg-white rounded">
            <h3 class="font-bold text-dark mb-2">Svelte 5.43.2</h3>
            <p class="text-sm text-dark">UI components with Runes ‚úì</p>
          </div>
          <div class="p-4 bg-white rounded">
            <h3 class="font-bold text-dark mb-2">UnoCSS</h3>
            <p class="text-sm text-dark">Tailwind-compatible utilities ‚úì</p>
          </div>
          <div class="p-4 bg-white rounded">
            <h3 class="font-bold text-dark mb-2">TypeScript 5.9.3</h3>
            <p class="text-sm text-dark">Strict mode enabled ‚úì</p>
          </div>
        </div>
        <button class="btn-primary mt-6">Test Primary Button</button>
      </section>

      <!-- Typography Section -->
      <section class="mb-12">
        <h2 class="text-4xl font-bold text-dark mb-6">Typography System</h2>
        <TypographyShowcase />
      </section>

      <!-- Responsive & Spacing Section -->
      <section class="mb-12">
        <h2 class="text-4xl font-bold text-dark mb-6">Responsive Design & Spacing</h2>
        <ResponsiveDemo />
      </section>

      <!-- Container & Layout Section -->
      <section class="mb-12">
        <h2 class="text-4xl font-bold text-dark mb-6">Container & Layout System</h2>
        <ContainerDemo />
      </section>

      <!-- Color Palette Section -->
      <section class="mb-12">
        <h2 class="text-4xl font-bold text-dark mb-6">Color System</h2>
        <ColorPalette />
      </section>

      <!-- Svelte 5 Runes Test -->
      <section class="mb-12 p-6 bg-almond rounded-lg">
        <h2 class="text-3xl font-semibold text-dark mb-4">Svelte 5 Runes Test</h2>
        <p class="text-dark mb-4">
          Testing Svelte 5's new reactive system with $state and $derived:
        </p>
        <TestCounter client:load />
      </section>

      <!-- Phase Status -->
      <footer class="mt-16 p-6 bg-white rounded-lg border-2 border-primary">
        <h3 class="text-2xl font-bold text-dark mb-3">Development Progress</h3>
        <ul class="space-y-2">
          <li class="text-dark">‚úÖ Phase 1: Project Setup & Configuration - Complete</li>
          <li class="text-primary font-bold">
            üîÑ Phase 2: Design System Implementation - In Progress
          </li>
          <li class="text-dark opacity-50">‚è≥ Phase 3-10: Upcoming</li>
        </ul>
      </footer>
    </main>
</BaseLayout>
