---
import BaseLayout from '@layouts/BaseLayout.astro';
import Container from '@components/layout/Container.svelte';
import Section from '@components/layout/Section.svelte';
import TestCounter from '@components/TestCounter.svelte';
import ColorPalette from '@components/ui/ColorPalette.svelte';
import TypographyShowcase from '@components/ui/TypographyShowcase.svelte';
import ResponsiveDemo from '@components/ui/ResponsiveDemo.svelte';
import ContainerDemo from '@components/ui/ContainerDemo.svelte';
import ContainerQueryTest from '@components/ui/ContainerQueryTest.svelte';
import ThemeShowcase from '@components/ui/ThemeShowcase.svelte';
import ThemeSwitcher from '@components/ui/ThemeSwitcher.svelte';
import ThemePreview from '@components/ui/ThemePreview.svelte';
import Icon from '@components/ui/Icon.svelte';
import Button from '@components/ui/Button.svelte';
import Card from '@components/ui/Card.svelte';
import Input from '@components/ui/Input.svelte';
import Textarea from '@components/ui/Textarea.svelte';
import Select from '@components/ui/Select.svelte';
import Checkbox from '@components/ui/Checkbox.svelte';
import Testimonial from '@components/ui/Testimonial.svelte';
import ServiceCard from '@components/ui/ServiceCard.svelte';
import Hero from '@components/sections/Hero.svelte';
---

<BaseLayout
  title="Design System Showcase"
  description="Service website template design system with multi-theme support"
>
  <main id="main-content">
    <!-- Hero Component Test -->
    <Hero
      headline="Build Amazing Experiences"
      subheadline="Create modern, responsive websites with our powerful design system and component library."
      primaryCTA={{ text: "Get Started", href: "#get-started" }}
      secondaryCTA={{ text: "Learn More", href: "#learn-more" }}
    />

    <Hero
      headline="Your Vision, Our Expertise"
      subheadline="Transform your ideas into reality with cutting-edge technology and exceptional design."
      primaryCTA={{ text: "View Portfolio", href: "#portfolio" }}
      backgroundImage="https://images.unsplash.com/photo-1519389950473-47ba0277781c?w=1920&q=80"
      fullHeight={false}
    />

    <!-- Header -->
    <Section backgroundColor="primary" paddingY="medium">
      <Container maxWidth="xl">
        <header>
        <h1 class="text-5xl font-bold mb-4">Service Website Template</h1>
        <p class="text-xl mb-2">Design System Showcase</p>
        <p class="text-base opacity-70">
          Astro 5.15.3 + Svelte 5.43.2 + UnoCSS - Multi-Theme System
        </p>
      </header>
      </Container>
    </Section>

      <!-- Technology Stack Status -->
    <Section backgroundColor="tertiary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-3xl font-semibold accent-primary mb-4">‚úÖ Tech Stack Status</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="p-4 bg-secondary rounded">
            <h3 class="font-bold mb-2">Astro 5.15.3</h3>
            <p class="text-sm">Meta-framework with partial hydration ‚úì</p>
          </div>
          <div class="p-4 bg-secondary rounded">
            <h3 class="font-bold mb-2">Svelte 5.43.2</h3>
            <p class="text-sm">UI components with Runes ‚úì</p>
          </div>
          <div class="p-4 bg-secondary rounded">
            <h3 class="font-bold mb-2">UnoCSS</h3>
            <p class="text-sm">Tailwind-compatible utilities ‚úì</p>
          </div>
          <div class="p-4 bg-secondary rounded">
            <h3 class="font-bold mb-2">TypeScript 5.9.3</h3>
            <p class="text-sm">Strict mode enabled ‚úì</p>
          </div>
        </div>
        <button class="btn-primary mt-6">Test Primary Button</button>
      </Container>
    </Section>

      <!-- Theme Switcher Section -->
    <Section backgroundColor="primary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Theme Switcher</h2>
        <p class="mb-4 text-secondary">
          Try switching between different themes to see the design system adapt!
        </p>
        <ThemeSwitcher client:load />
      </Container>
    </Section>

      <!-- Typography Section -->
    <Section backgroundColor="secondary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Typography System</h2>
        <TypographyShowcase />
      </Container>
    </Section>

      <!-- Responsive & Spacing Section -->
    <Section backgroundColor="primary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Responsive Design & Spacing</h2>
        <ResponsiveDemo />
      </Container>
    </Section>

      <!-- Container & Layout Section -->
    <Section backgroundColor="secondary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Container & Layout System</h2>
        <ContainerDemo />
      </Container>
    </Section>

    <!-- Container Query Test Section -->
    <Section backgroundColor="tertiary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Container Queries</h2>
        <p class="mb-6 text-secondary">
          Container queries allow components to respond to their container size instead of the viewport.
          This makes components truly reusable and adaptable to any context.
        </p>
        <ContainerQueryTest client:load />
      </Container>
    </Section>

      <!-- Color Palette Section -->
    <Section backgroundColor="primary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Color System</h2>
        <ColorPalette />
      </Container>
    </Section>

      <!-- Theme Showcase Section -->
    <!-- <Section backgroundColor="secondary" paddingY="medium"> -->
    <!--   <Container maxWidth="xl"> -->
    <!--     <h2 class="text-4xl font-bold text-dark mb-6">Color System</h2> -->
    <!--     <ThemeShowcase /> -->
    <!--   </Container> -->
    <!-- </Section> -->

    <!-- ServiceCard Component Test -->
    <Section backgroundColor="secondary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">ServiceCard Component</h2>
        <p class="mb-6 text-secondary">
          Display service offerings with icons, hover animations, and responsive layouts.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <ServiceCard
            title="Web Development"
            description="Build modern, responsive websites with the latest technologies and best practices."
            icon="external-link"
            href="#web-dev"
          />
          
          <ServiceCard
            title="Mobile Apps"
            description="Create native and cross-platform mobile applications for iOS and Android."
            icon="phone"
            href="#mobile"
          />
          
          <ServiceCard
            title="UI/UX Design"
            description="Design beautiful, intuitive user interfaces that delight your customers."
            icon="heart"
            href="#design"
          />
          
          <ServiceCard
            title="Consulting"
            description="Get expert advice on technology strategy, architecture, and implementation."
            icon="user"
            href="#consulting"
          />
          
          <ServiceCard
            title="Cloud Services"
            description="Deploy and manage your applications on modern cloud infrastructure."
            icon="settings"
            href="#cloud"
          />
          
          <ServiceCard
            title="Support & Maintenance"
            description="Keep your applications running smoothly with ongoing support and updates."
            icon="check-circle"
            href="#support"
          />
        </div>
      </Container>
    </Section>

    <!-- Testimonial Component Test -->
    <Section backgroundColor="primary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Testimonial Component</h2>
        <p class="mb-6 text-secondary">
          Display client testimonials with quotes, ratings, and author information.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Testimonial with rating and photo -->
          <Testimonial
            quote="This service exceeded all our expectations. The team was professional, responsive, and delivered exceptional results on time and within budget."
            author="Sarah Johnson"
            role="CEO, TechStart Inc."
            photo="https://i.pravatar.cc/150?img=1"
            rating={5}
          />

          <!-- Testimonial without photo -->
          <Testimonial
            quote="Working with this team was an absolute pleasure. They understood our vision and brought it to life better than we could have imagined."
            author="Michael Chen"
            role="Product Manager, InnovateCo"
            rating={5}
          />

          <!-- Testimonial with partial rating -->
          <Testimonial
            quote="Great experience overall. The project was completed professionally and the communication throughout was excellent."
            author="Emily Rodriguez"
            role="Marketing Director"
            photo="https://i.pravatar.cc/150?img=5"
            rating={4}
          />

          <!-- Testimonial without rating -->
          <Testimonial
            quote="I highly recommend their services. The attention to detail and commitment to quality is outstanding."
            author="David Park"
            role="Founder, StartupLab"
          />
        </div>
      </Container>
    </Section>

    <!-- Form Components Test -->
    <Section backgroundColor="tertiary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Form Components</h2>
        <p class="mb-6 text-secondary">
          Accessible form inputs with error states, validation, and theme support.
        </p>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Left Column -->
          <div class="space-y-6">
            <!-- Input Component -->
            <div>
              <h3 class="text-2xl font-semibold mb-4">Input Component</h3>
              <div class="space-y-4">
                <Input
                  id="name"
                  label="Full Name"
                  placeholder="Enter your name"
                  required
                  client:load
                />
                <Input
                  id="email"
                  label="Email Address"
                  type="email"
                  placeholder="you@example.com"
                  required
                  client:load
                />
                <Input
                  id="phone"
                  label="Phone Number"
                  type="tel"
                  placeholder="+1 (555) 000-0000"
                  client:load
                />
                <Input
                  id="password"
                  label="Password"
                  type="password"
                  placeholder="Enter password"
                  required
                  client:load
                />
                <Input
                  id="error-demo"
                  label="Input with Error"
                  error="This field is required"
                  client:load
                />
                <Input
                  id="disabled"
                  label="Disabled Input"
                  value="This is disabled"
                  disabled
                  client:load
                />
              </div>
            </div>

            <!-- Textarea Component -->
            <div>
              <h3 class="text-2xl font-semibold mb-4">Textarea Component</h3>
              <div class="space-y-4">
                <Textarea
                  id="message"
                  label="Message"
                  placeholder="Type your message here..."
                  rows={4}
                  required
                  client:load
                />
                <Textarea
                  id="message-error"
                  label="Textarea with Error"
                  error="Message must be at least 10 characters"
                  rows={3}
                  client:load
                />
              </div>
            </div>
          </div>

          <!-- Right Column -->
          <div class="space-y-6">
            <!-- Select Component -->
            <div>
              <h3 class="text-2xl font-semibold mb-4">Select Component</h3>
              <div class="space-y-4">
                <Select
                  id="country"
                  label="Country"
                  placeholder="Select a country"
                  options={[
                    { value: 'us', label: 'United States' },
                    { value: 'uk', label: 'United Kingdom' },
                    { value: 'ca', label: 'Canada' },
                    { value: 'au', label: 'Australia' },
                  ]}
                  required
                  client:load
                />
                <Select
                  id="service"
                  label="Service Type"
                  placeholder="Choose a service"
                  options={[
                    { value: 'web', label: 'Web Development' },
                    { value: 'mobile', label: 'Mobile Development' },
                    { value: 'design', label: 'UI/UX Design' },
                    { value: 'consulting', label: 'Consulting' },
                  ]}
                  client:load
                />
                <Select
                  id="select-error"
                  label="Select with Error"
                  placeholder="Select an option"
                  options={[
                    { value: '1', label: 'Option 1' },
                    { value: '2', label: 'Option 2' },
                  ]}
                  error="Please select an option"
                  client:load
                />
                <Select
                  id="disabled-select"
                  label="Disabled Select"
                  options={[
                    { value: '1', label: 'Option 1' },
                  ]}
                  disabled
                  client:load
                />
              </div>
            </div>

            <!-- Checkbox Component -->
            <div>
              <h3 class="text-2xl font-semibold mb-4">Checkbox Component</h3>
              <div class="space-y-4">
                <Checkbox
                  id="agree"
                  label="I agree to the terms and conditions"
                  required
                  client:load
                />
                <Checkbox
                  id="newsletter"
                  label="Subscribe to newsletter"
                  client:load
                />
                <Checkbox
                  id="checkbox-error"
                  label="Checkbox with Error"
                  error="You must accept this"
                  client:load
                />
                <Checkbox
                  id="disabled-checkbox"
                  label="Disabled Checkbox"
                  disabled
                  client:load
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Example Form -->
        <div class="mt-12 p-6 bg-primary rounded-lg">
          <h3 class="text-2xl font-semibold mb-6">Complete Form Example</h3>
          <form class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <Input
                id="form-name"
                label="Name"
                required
                client:load
              />
              <Input
                id="form-email"
                label="Email"
                type="email"
                required
                client:load
              />
            </div>
            <Select
              id="form-subject"
              label="Subject"
              placeholder="Select a subject"
              options={[
                { value: 'general', label: 'General Inquiry' },
                { value: 'support', label: 'Support Request' },
                { value: 'sales', label: 'Sales Question' },
              ]}
              required
              client:load
            />
            <Textarea
              id="form-message"
              label="Message"
              rows={5}
              required
              client:load
            />
            <Checkbox
              id="form-consent"
              label="I consent to being contacted"
              required
              client:load
            />
            <div class="flex gap-4">
              <Button type="submit" variant="primary">Submit Form</Button>
              <Button type="button" variant="outline">Cancel</Button>
            </div>
          </form>
        </div>
      </Container>
    </Section>

    <!-- Card Component Test -->
    <Section backgroundColor="secondary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Card Component</h2>
        <p class="mb-6 text-secondary">
          Flexible card component with slots, container queries, and clickable variants.
        </p>

        <!-- Basic Cards -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Basic Cards</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <Card>
              {#snippet title()}
                <h4>Simple Card</h4>
              {/snippet}
              This is a simple card with just a title and body content.
            </Card>

            <Card padding="sm">
              {#snippet title()}
                <h4>Small Padding</h4>
              {/snippet}
              This card uses small padding for a more compact layout.
            </Card>

            <Card padding="lg">
              {#snippet title()}
                <h4>Large Padding</h4>
              {/snippet}
              This card uses large padding for more breathing room.
            </Card>
          </div>
        </div>

        <!-- Clickable Cards -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Clickable Cards</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <Card href="#card-test" clickable>
              {#snippet title()}
                <h4>Clickable Card</h4>
              {/snippet}
              This entire card is clickable with hover effects. Try hovering over it!
            </Card>

            <Card href="#card-test">
              {#snippet title()}
                <h4>Link Card</h4>
              {/snippet}
              Cards with href automatically become clickable links.
            </Card>
          </div>
        </div>

        <!-- Card with Footer -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Cards with Footer</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <Card>
              {#snippet title()}
                <h4>Card with Footer</h4>
              {/snippet}
              This card has a footer section that's visually separated from the content.
              {#snippet footer()}
                <Button variant="primary" size="sm">Learn More</Button>
              {/snippet}
            </Card>

            <Card>
              {#snippet title()}
                <h4>Action Card</h4>
              {/snippet}
              Cards can have action buttons in the footer for CTAs.
              {#snippet footer()}
                <div class="flex gap-2">
                  <Button variant="outline" size="sm">Cancel</Button>
                  <Button variant="primary" size="sm">Confirm</Button>
                </div>
              {/snippet}
            </Card>
          </div>
        </div>

        <!-- Card Container Query Demo -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Container Query Responsive</h3>
          <p class="mb-4 text-sm opacity-70">
            Cards use container queries to adapt to their container width, not viewport width.
          </p>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div style="max-width: 350px;">
              <Card>
                {#snippet title()}
                  <h4>Small Container</h4>
                {/snippet}
                This card is in a narrow container, so it stays vertical.
              </Card>
            </div>
            <div style="max-width: 700px;">
              <Card>
                {#snippet title()}
                  <h4>Large Container</h4>
                {/snippet}
                This card is in a wider container, so it can switch to horizontal layout.
              </Card>
            </div>
          </div>
        </div>
      </Container>
    </Section>

    <!-- Button Component Test -->
    <Section backgroundColor="primary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Button Component</h2>
        <p class="mb-6 text-secondary">
          Versatile button component with multiple variants, sizes, and states.
        </p>

        <!-- Button Variants -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Button Variants</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Button variant="primary">Primary Button</Button>
            <Button variant="secondary">Secondary Button</Button>
            <Button variant="outline">Outline Button</Button>
            <Button variant="ghost">Ghost Button</Button>
          </div>
        </div>

        <!-- Button Sizes -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Button Sizes</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Button variant="primary" size="sm">Small Button</Button>
            <Button variant="primary" size="md">Medium Button</Button>
            <Button variant="primary" size="lg">Large Button</Button>
          </div>
        </div>

        <!-- Button States -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Button States</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Button variant="primary">Normal</Button>
            <Button variant="primary" disabled>Disabled</Button>
            <Button variant="primary" loading>Loading</Button>
          </div>
        </div>

        <!-- Button as Link -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Button as Link</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Button variant="primary" href="#button-test">Link Button</Button>
            <Button variant="outline" href="#button-test">Outline Link</Button>
          </div>
        </div>

        <!-- Buttons with Icons -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Buttons with Icons</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Button variant="primary">
              <Icon name="check" size="sm" ariaHidden />
              Success
            </Button>
            <Button variant="secondary">
              <Icon name="arrow-right" size="sm" ariaHidden />
              Next
            </Button>
            <Button variant="outline">
              <Icon name="external-link" size="sm" ariaHidden />
              External
            </Button>
            <Button variant="ghost">
              <Icon name="settings" size="sm" ariaHidden />
              Settings
            </Button>
          </div>
        </div>
      </Container>
    </Section>

    <!-- Icon Component Test -->
    <Section backgroundColor="tertiary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-4xl font-bold mb-6">Icon Component</h2>
        <p class="mb-6 text-secondary">
          Lucide icons with accessibility support, flexible sizing, and theme awareness.
        </p>

        <!-- Icon Sizes -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Icon Sizes</h3>
          <div class="flex items-center gap-6 flex-wrap">
            <div class="flex items-center gap-2">
              <Icon name="star" size="sm" />
              <span class="text-sm">Small (16px)</span>
            </div>
            <div class="flex items-center gap-2">
              <Icon name="star" size="md" />
              <span class="text-sm">Medium (24px)</span>
            </div>
            <div class="flex items-center gap-2">
              <Icon name="star" size="lg" />
              <span class="text-sm">Large (32px)</span>
            </div>
            <div class="flex items-center gap-2">
              <Icon name="star" size={48} />
              <span class="text-sm">Custom (48px)</span>
            </div>
          </div>
        </div>

        <!-- Navigation Icons -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Navigation Icons</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Icon name="menu" ariaLabel="Menu" />
            <Icon name="close" ariaLabel="Close" />
            <Icon name="arrow-right" ariaLabel="Arrow right" />
            <Icon name="arrow-left" ariaLabel="Arrow left" />
            <Icon name="arrow-up" ariaLabel="Arrow up" />
            <Icon name="arrow-down" ariaLabel="Arrow down" />
            <Icon name="chevron-down" ariaLabel="Chevron down" />
            <Icon name="chevron-up" ariaLabel="Chevron up" />
            <Icon name="chevron-left" ariaLabel="Chevron left" />
            <Icon name="chevron-right" ariaLabel="Chevron right" />
          </div>
        </div>

        <!-- Contact Icons -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Contact Icons</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Icon name="phone" ariaLabel="Phone" />
            <Icon name="mail" ariaLabel="Email" />
            <Icon name="map-pin" ariaLabel="Location" />
          </div>
        </div>

        <!-- Social Icons -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Social Media Icons</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Icon name="facebook" ariaLabel="Facebook" />
            <Icon name="instagram" ariaLabel="Instagram" />
            <Icon name="twitter" ariaLabel="Twitter" />
            <Icon name="linkedin" ariaLabel="LinkedIn" />
            <Icon name="github" ariaLabel="GitHub" />
          </div>
        </div>

        <!-- Action Icons -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Action & UI Icons</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Icon name="check" ariaLabel="Check" />
            <Icon name="search" ariaLabel="Search" />
            <Icon name="settings" ariaLabel="Settings" />
            <Icon name="external-link" ariaLabel="External link" />
            <Icon name="calendar" ariaLabel="Calendar" />
            <Icon name="clock" ariaLabel="Clock" />
            <Icon name="user" ariaLabel="User" />
            <Icon name="star" ariaLabel="Star" />
            <Icon name="heart" ariaLabel="Heart" />
            <Icon name="alert-circle" ariaLabel="Alert" />
            <Icon name="check-circle" ariaLabel="Success" />
            <Icon name="info" ariaLabel="Info" />
          </div>
        </div>

        <!-- Color Customization -->
        <div class="mb-8">
          <h3 class="text-2xl font-semibold mb-4">Custom Colors</h3>
          <div class="flex items-center gap-4 flex-wrap">
            <Icon name="heart" color="red" ariaLabel="Red heart" />
            <Icon name="star" color="gold" ariaLabel="Gold star" />
            <Icon name="check-circle" color="green" ariaLabel="Green check" />
            <Icon name="alert-circle" color="orange" ariaLabel="Orange alert" />
            <Icon name="info" color="blue" ariaLabel="Blue info" />
          </div>
        </div>
      </Container>
    </Section>

      <!-- Svelte 5 Runes Test -->
    <Section backgroundColor="secondary" paddingY="medium">
      <Container maxWidth="xl">
        <h2 class="text-3xl font-semibold mb-4">Svelte 5 Runes Test</h2>
        <p class="mb-4">
