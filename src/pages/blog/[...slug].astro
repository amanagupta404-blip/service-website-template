---
/**
 * Individual Blog Post Pages (Dynamic Route)
 * Renders markdown content with metadata and related posts
 */

import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import Container from '@components/layout/Container.svelte';
import Section from '@components/layout/Section.svelte';
import Breadcrumbs from '@components/ui/Breadcrumbs.svelte';
import BlogPostHeader from '@components/ui/BlogPostHeader.svelte';
import ShareButtons from '@components/ui/ShareButtons.svelte';
import RelatedPosts from '@components/ui/RelatedPosts.svelte';
import Button from '@components/ui/Button.svelte';

// Generate static paths for all blog posts
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (same category or tags, exclude current post)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p =>
    p.slug !== post.slug &&
    (p.data.category === post.data.category ||
     p.data.tags.some(tag => post.data.tags.includes(tag)))
  )
  .slice(0, 3)
  .map(p => ({
    blogTitle: p.data.title,
    excerpt: p.data.description,
    image: p.data.image,
    date: p.data.publishDate.toISOString().split('T')[0],
    author: p.data.author,
    readTime: p.data.readTime,
    category: p.data.category,
    href: `/blog/${p.slug}`,
  }));

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Blog', href: '/blog' },
  { label: post.data.title, href: `/blog/${post.slug}` },
];

// Full URL for sharing
const postUrl = `${Astro.site || 'https://example.com'}/blog/${post.slug}`;
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
>
  <main id="main-content">
    <!-- Breadcrumbs -->
    <Section backgroundColor="primary" paddingY="small">
      <Container maxWidth="xl">
        <Breadcrumbs items={breadcrumbItems} client:load />
      </Container>
    </Section>

    <!-- Blog Post Header -->
    <Section backgroundColor="primary" paddingY="medium">
      <Container maxWidth="xl">
        <BlogPostHeader
          title={post.data.title}
          date={post.data.publishDate.toISOString().split('T')[0]}
          author={post.data.author}
          readTime={post.data.readTime}
          image={post.data.image}
          tags={post.data.tags}
          client:load
        />
      </Container>
    </Section>

    <!-- Blog Post Content -->
    <Section backgroundColor="secondary" paddingY="large">
      <Container maxWidth="xl">
        <article class="prose prose-lg max-w-4xl mx-auto">
          <Content />
        </article>

        <!-- Share Buttons -->
        <div class="max-w-4xl mx-auto mt-12 pt-8 border-t-2 border-color">
          <ShareButtons
            url={postUrl}
            title={post.data.title}
            client:load
          />
        </div>
      </Container>
    </Section>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <Section backgroundColor="tertiary" paddingY="large">
        <Container maxWidth="xl">
          <RelatedPosts
            posts={relatedPosts}
            title="Related Articles"
            client:load
          />
        </Container>
      </Section>
    )}

    <!-- Back to Blog CTA -->
    <Section backgroundColor="primary" paddingY="large">
      <Container maxWidth="xl">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-4">Enjoy This Article?</h2>
          <p class="text-xl text-secondary mb-8">
            Check out more insights and tutorials on our blog.
          </p>
          <Button href="/blog" variant="primary" size="lg" client:load>
            Back to Blog
          </Button>
        </div>
      </Container>
    </Section>
  </main>
</BaseLayout>

<style>
  /* Prose styling for markdown content */
  .prose {
    color: var(--color-text-primary);
  }

  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    color: var(--color-text-primary);
    font-weight: bold;
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3;
  }

  .prose :global(h2) {
    font-size: 2rem;
    margin-top: 2.5em;
  }

  .prose :global(h3) {
    font-size: 1.5rem;
  }

  .prose :global(p) {
    margin-bottom: 1.5em;
    line-height: 1.8;
  }

  .prose :global(a) {
    color: var(--color-accent-primary);
    text-decoration: underline;
    font-weight: 600;
  }

  .prose :global(a:hover) {
    opacity: 0.8;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 1.5em 0;
    padding-left: 1.5em;
  }

  .prose :global(li) {
    margin-bottom: 0.5em;
    line-height: 1.7;
  }

  .prose :global(code) {
    background: var(--color-bg-secondary);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }

  .prose :global(pre) {
    background: var(--color-bg-secondary);
    padding: 1.5em;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2em 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-accent-primary);
    padding-left: 1.5em;
    margin: 2em 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .prose :global(img) {
    border-radius: 8px;
    margin: 2em auto;
    max-width: 100%;
    height: auto;
  }

  .prose :global(strong) {
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .prose :global(table) {
    width: 100%;
    margin: 2em 0;
    border-collapse: collapse;
  }

  .prose :global(th),
  .prose :global(td) {
    padding: 0.75em;
    border: 1px solid var(--color-bg-secondary);
    text-align: left;
  }

  .prose :global(th) {
    background: var(--color-bg-secondary);
    font-weight: 600;
  }
</style>
