---
/**
 * Skip to Content Link
 *
 * Accessibility component that allows keyboard users to skip navigation
 * and jump directly to main content. Visually hidden until focused.
 *
 * Props:
 * - target: string (default: '#main-content') - ID of the main content element
 */

interface Props {
  target?: string;
}

const { target = '#main-content' } = Astro.props;
---

<a href={target} class="skip-link">Skip to main content</a>
