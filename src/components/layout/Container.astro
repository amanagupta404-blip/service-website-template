---
/**
 * Container Component
 *
 * Responsive container with configurable max-width and padding.
 * Centers content and provides consistent horizontal spacing.
 *
 * Props:
 * - size: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full' (default: 'xl')
 * - noPadding: boolean (default: false) - removes horizontal padding
 * - class: string - additional CSS classes
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full';
  noPadding?: boolean;
  class?: string;
}

const { size = 'xl', noPadding = false, class: className = '' } = Astro.props;

// Map size to max-width classes
const sizeClasses = {
  sm: 'max-w-[640px]',
  md: 'max-w-[768px]',
  lg: 'max-w-[1024px]',
  xl: 'max-w-[1280px]',
  '2xl': 'max-w-[1400px]',
  full: 'max-w-full',
};

const paddingClass = noPadding ? '' : 'px-6 md:px-8 lg:px-12';
const containerClasses = `mx-auto ${sizeClasses[size]} ${paddingClass} ${className}`.trim();
---

<div class={containerClasses}>
  <slot />
</div>
